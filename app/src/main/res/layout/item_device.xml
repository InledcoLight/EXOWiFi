<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_device_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:clickable="true">

    <ImageView
        android:id="@+id/item_device_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:tint="@color/colorWhite"
        app:srcCompat="@drawable/ic_device_white_64dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="start">

        <TextView
            android:id="@+id/item_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"/>

        <TextView
            android:id="@+id/item_device_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"/>

        <TextView
            android:id="@+id/item_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <android.support.design.widget.CheckableImageButton
                android:id="@+id/item_device_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparent"
                app:srcCompat="@drawable/ic_cloud_white_24dp"
                android:tint="@color/selector_green_gray"/>
            <android.support.design.widget.CheckableImageButton
                android:id="@+id/item_device_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparent"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/ic_wifi_white_24dp"
                android:tint="@color/selector_green_gray"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>

